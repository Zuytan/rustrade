# Rustrade Configuration - Metal ETFs
MODE=alpaca
ASSET_CLASS=stock

# Alpaca API Credentials (User must fill these or inherit from shell)
ALPACA_API_KEY=PK_REPLACE_ME
ALPACA_SECRET_KEY=SK_REPLACE_ME
ALPACA_BASE_URL=https://paper-api.alpaca.markets
ALPACA_DATA_URL=https://data.alpaca.markets
ALPACA_WS_URL=wss://stream.data.alpaca.markets/v2/iex

# Trading Parameters
SYMBOLS=GLD,SLV
SECTORS=GLD:Commodities,SLV:Commodities
MAX_POSITIONS=2
INITIAL_CASH=100000.0
TRADE_QUANTITY=10.0

# Strategy
STRATEGY_MODE=dynamic
FAST_SMA_PERIOD=20
SLOW_SMA_PERIOD=50
SMA_THRESHOLD=0.002
RSI_PERIOD=14
RSI_THRESHOLD=65.0
TREND_DIVERGENCE_THRESHOLD=0.005

# Risk Management
RISK_APPETITE_SCORE=5
MAX_POSITION_SIZE_PCT=0.20
MAX_SECTOR_EXPOSURE_PCT=0.50
MAX_DAILY_LOSS_PCT=0.02
MAX_DRAWDOWN_PCT=0.10
CONSECUTIVE_LOSS_LIMIT=3
