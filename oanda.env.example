# ==============================================
# RUSTRADE CONFIGURATION (OANDA MODE)
# ==============================================

# Mode: mock, alpaca, or oanda
MODE=oanda

# ----------------------------------------------
# OANDA CONFIGURATION
# ----------------------------------------------
# Your personal access token
OANDA_API_KEY=your_oanda_access_token_here

# Your account ID (format: 000-000-0000000-000)
OANDA_ACCOUNT_ID=000-000-0000000-000

# Base URLs (Defaults set to Practice/Demo environment)
# For Practice:
OANDA_API_BASE_URL=https://api-fxpractice.oanda.com
OANDA_STREAM_BASE_URL=https://stream-fxpractice.oanda.com

# For Live (Real Trading!!):
# OANDA_API_BASE_URL=https://api-fxtrade.oanda.com
# OANDA_STREAM_BASE_URL=https://stream-fxtrade.oanda.com

# ----------------------------------------------
# TRADING PARAMETERS
# ----------------------------------------------
# Symbols to trade (Forex pairs use underscore, e.g. EUR_USD, USD_JPY)
# CFDs are also supported (e.g. JP225_USD for Nikkei 225)
SYMBOLS=EUR_USD,USD_JPY,GBP_USD,JP225_USD

# Risk Appetite (1-10)
# Adjusts risk parameters automatically (Stop Loss, Position Size, etc.)
RISK_APPETITE_SCORE=5

# Maximum number of concurrent positions
MAX_POSITIONS=5

# Initial Cash for Simulation (in Account Currency)
INITIAL_CASH=100000.0
